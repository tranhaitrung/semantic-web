@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XLMSchema#> .
@prefix am: <http://www.semantic-web.hust.edu.vn/animal#> .

am:Animal a rdfs:Class ;
	rdfs:label "Animal" ;
	owl:equivalentClass
       [owl:unionOf (am:Bird am:Reptile am:Fish)].

am:Bird rdfs:label "Bird";
    rdfs:comment "A class representing a bird species.";
	owl:equivalentClass
       [owl:unionOf (am:FlyingBird am:RunningBird am:SwimmingBird)] .

am:Organism a rdfs:Class ;
    rdfs:label "Organism" ;
    rdfs:comment "A class that represents all living things, including animals, plants, and microorganisms." .

am:hasUnit a owl:DatatypeProperty;
    rdfs:domain am:Property;
    rdfs:range xsd:string;
    rdfs:label "has unit".

am:animalName a rdf:property;
    rdfs:label "name";
    rdfs:domain am:Animal;
    rdfs:range xsd:string .

am:spawn a owl:Class;
    rdfs:subClassOf am:Animal;
    rdfs:label "spawn";
    rdfs:comment "A class representing animals that lay eggs";
    owl:equivalentClass [ a owl:Restriction ;
                         owl:onProperty am:laysEggs ;
                         owl:allValuesFrom am:Egg
                       ].

am:herbivore owl:intersectionOf
    (am:Animal
        [a owl:Restriction;
        owl:onProperty am:eats;
        owl:allValuesFrom am:Plant]
    );
    rdfs:comment "Động vật ăn cỏ";
    rdfs:label "herbivore".

am:carnivore owl:intersectionOf
    (am:Animal
         [a owl:Restriction;
             owl:onProperty am:eats;
             owl:allValuesFrom am:Animal]
    );
    rdfs:comment "Động vật ăn thịt";
    rdfs:label "carnivore".

am:omnivore owl:intersectionOf
  (am:Animal
       [a owl:Restriction;
           owl:onProperty am:eats;
           owl:someValuesFrom am:Plant]
  am:Animal
       [a owl:Restriction;
           owl:onProperty am:eats;
           owl:someValuesFrom am:Animal]
  );
  rdfs:comment "Lớp động vật ăn cả động vật và thực vật";
  rdfs:label "omnivore".

am:longevity a owl:DatatypeProperty;
    rdfs:domain am:Animal;
    rdfs:range xsd:nonNegativeInteger;
    rdfs:label "longevity".

am:reproduction a owl:DatatypeProperty;
    rdfs:domain am:Animal;
    rdfs:range xsd:nonNegativeInteger .

am:hasWing rdfs:subClassOf
	[a owl:Restriction;
       owl:allValuesFrom am:body;
	   owl:onProperty am:isPartOf] .

am:hasLeg rdfs:subClassOf
	[a owl:Restriction;
       owl:allValuesFrom am:body;
	   owl:onProperty am:isPartOf] .

am:hasGill rdfs:subClassOf
	[a owl:Restriction;
       owl:allValuesFrom am:body ;
	   owl:onProperty am:isPartOf] .

am:wing owl:intersectionOf(am:Animal
	[a owl:Restriction;
	owl:onProperty am:hasWing;
	owl:allValuesFrom am:Animal
	]) .

am:leg owl:intersectionOf(am:Animal
	[a owl:Restriction;
	owl:onProperty am:hasLeg;
	owl:allValuesFrom am:Animal
	]) .

am:gill owl:intersectionOf(am:Animal
	[a owl:Restriction;
	owl:onProperty am:hasGill;
	owl:allValuesFrom am:Animal
	]) .
#chiều cao
am:height a rdfs:property;
    rdfs:label "height";
    rdfs:domain am:Animal;
    rdfs:description "height of animal";
    rdfs:range xsd:nonNegativeDouble;
    am:hasUnit "cm" .
#cân nặng
am:weigh a rdfs:property;
    rdfs:label "weigh";
    rdfs:domain am:Animal;
    rdfs:description "weigh of animal";
    rdfs:range xsd:nonNegativeDouble;
    am:hasUnit "g" .

# Thức ăn
am:food a rdfs:property;
    rdfs:label "food";
    rdfs:description "something animal eat";
    rdfs:domain am:Organism;
    rdfs:range xsd:string .

# Sải cánh
am:wingspan a rdfs:property;
    rdfs:label "wingspan";
    rdfs:domain am:Bird;
    rdfs:description "the length of the bird's wings";
    rdfs:range xsd:nonNegativeDouble;
    am:hasUnit "cm" .
# Tập tính
am:custom a rdfs:property;
    rdfs:label "custom";
    rdfs:description "Living habits";
    rdfs:domain am:Bird;
    rdfs:range xsd:string .

# Môi trường sống
am:habitat a rdfs:property;
    rdfs:label "habitat";
    rdfs:description "the space in which animals live";
    rdfs:range xsd:string .

#tốc độ di chuyển
am:speed a rdfs:property;
    rdfs:label "speed";
    rdfs:description "an animal's ability to move fast or slow";
    rdfs:domain am:Animal;
    rdfs:range xsd:nonNegativeDouble;
    am:hasUnit "km/h" .

am:color a rdfs:property;
    rdfs:label "color";
    rdfs:description "the animal's color";
    rdfs:domain am:Animal;
    rdfs:range xsd:string .

am:binomialClass a rdfs:property;
    rdfs:label "class" ;
    rdfs:comment "A taxonomic class of the bird." ;
    rdfs:domain am:Bird ;
    rdfs:range xsd:string .

am:binomialName a rdfs:property;
     rdfs:label "binomial name" ;
     rdfs:comment "The binomial name of the bird." ;
     rdfs:domain am:Bird ;
     rdfs:range xsd:string .


am:Family a rdfs:Class ;
    rdfs:label "Family" ;
    rdfs:comment "A class that represents a group of related bird species." .

am:Ordo a rdfs:Class ;
    rdfs:label "Ordo" ;
    rdfs:comment "A class that represents a taxonomic grouping of related bird families." .

am:Class a rdfs:Class ;
    rdfs:label "Class" ;
    rdfs:comment "A class that represents a taxonomic grouping of related bird orders." .

am:Species a rdfs:Class ;
    rdfs:label "Species" ;
    rdfs:comment "A species is a fundamental category of taxonomic classification, rank below a genus." .


